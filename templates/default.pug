doctype
html
    head
        title #{title} @ osmarks.ml
        meta(name="description" content= description)
        link(rel="stylesheet" href="/assets/style/style.css")
        link(rel="stylesheet" href="/assets/style/railscasts.min.css")
        link(rel="icon" type="image/png", href="/assets/images/icon.png?reloadyoustupidicon=3")
        link(rel="manifest" href="/manifest.webmanifest")
        meta(name="author" content="Oliver Marks")
        meta(name="description" content="Random Stuff")
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible" content="ie=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="google-site-verification" content="F6P4moGYaKEFCLBrNmAZjhn6sEJ7zQTZpUQIW1Z4PZA")
        meta(name="theme-color" content="#000028")
        script(src="/assets/js/sw-register.js" defer)
        script(src="/assets/js/highlight.pack.js" defer)
        block headers
    body
        include nav.pug
        div.titling
            block titling
                h1= title
                em= description
        block contents
            div.main-content!= contents
        block comments
            script(data-isso="https://osmarks.ml/comments/" src="https://osmarks.ml/comments/js/embed.min.js" defer)
            section#isso-thread